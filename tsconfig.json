{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "sourceMap": true,
    "outDir": "build",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules/*",
    "node_modules",
    "**/build/*",
    "build"
  ]
}
